@model DataAccess.Model.User
@{
    ViewBag.Title = Model.GetFullName();
}

<div class="row">
    <div class="col-4">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Osobní údaje</h6>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "User", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="name">Jméno:</label>
                        @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                    <div class="form-group">
                        <label for="name">Příjmení:</label>
                        @Html.TextBoxFor(x => x.Surname, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Surname)
                    </div>
                    <div class="form-group">
                        <label for="email">E-mail:</label>
                        @Html.TextBoxFor(x => x.Email, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <div class="form-group">
                        <label for="email">Telefon:</label>
                        @Html.TextBoxFor(x => x.Phone, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Phone)
                    </div>
                    <div class="form-group">
                        <label for="password">Heslo:</label>
                        @Html.TextBoxFor(x => x.Password, new {@class = "form-control", @type = "password"})
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                    <div class="form-group">
                        <label for="role">Role:</label>
                        @Html.DropDownList("roleId", new SelectList(ViewBag.roles, "Id", "Title"), new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Role)
                    </div>
                    @Html.HiddenFor(x=>x.Id)
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Uložit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>