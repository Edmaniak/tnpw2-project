@using DataAccess.Model
@model List<DataAccess.Model.Equipment>
<div id="equipmentsTable">
    <table class="table table-bordered equipmentsTable">
        <thead>
        <tr>
            <th></th>
            <th>Id</th>
            <th>Označení</th>
            <th>Lokace</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Equipment e in Model)
        {
            <tr>
                <td>
                    <input @if (ViewBag.equipmentId == e.Id) {<text>checked="checked"</text>}  name="equipmentId" type="radio" value="@e.Id"/>
                </td>
                <td> @e.Id (@e.Code)</td>
                <td><a target="_blank" href="@Url.Action("Detail", "Equipment", new {Id = e.Id})">@e.Title</a></td>
                <td><a target="_blank" href="@Url.Action("Detail", "Room", new {Id = e.Room.Id})">@e.Room.Name (@e.Room.Environment.Name)</a></td>
                <td>@e.Status.Title</td>
            </tr>
        }
        </tbody>
    </table>
</div>

