@using DataAccess.Model
@using DataAccess.Dao
@model DataAccess.Model.Control
@{
    ViewBag.Title = "Naplánovat kontrolu";
}
@using (Html.BeginForm("Create", "User", FormMethod.Post))
{
    <div class="row">
        <div class="col-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Zadejte údaje</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="name">Titulek:</label>
                        @Html.TextBoxFor(x => x.Title, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Title)
                    </div>
                    <div class="form-group">
                        <label for="password">Vybavení:</label>
                        @Html.DropDownListFor(x => x.Equipment, new SelectList(ViewBag.equipments, "Id", "Title"), new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Equipment)
                    </div>
                    <div class="form-group">
                        <label for="name">Popis a účel:</label>
                        @Html.TextAreaFor(x => x.Description, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Description)
                    </div>
                    <div class="form-group">
                        <label for="email">Naplánováno na:</label>
                        @Html.TextBoxFor(x => x.DatePlanned, "{0:dd. MM. yyyy}", new {@class = "form-control", @type = "date"})
                        @Html.ValidationMessageFor(x => x.DatePlanned)
                    </div>
                    <div class="form-group">
                        <label for="email">Delegovat uživateli:</label>
                        @Html.DropDownListFor(x => x.UserToPerform, new SelectList(ViewBag.users, "Id", "FullName"), new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.UserToPerform)
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Vytvořit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}