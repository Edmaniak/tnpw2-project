@using DataAccess.Model
@using DataAccess.Dao
@model ControlCategory
@{
    ViewBag.Title = Model.Title;
}
<div class="row">
    <div class="col-12 mb-3">
        <a href="@Url.Action("Delete", "ControlCategory", new {id = Model.Id})" class="btn btn-danger btn-icon-split btn-lg mr-2">
            <span class="icon text-white-50">
                <i class="far fa-times-circle"></i>
            </span>
            <span class="text">Odstranit</span>
        </a>
    </div>
</div>
@using (Html.BeginForm("Edit", "ControlCategory", FormMethod.Post))
{
    <div class="row">
        <div class="col-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Zadejte údaje</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="name">Jméno:</label>
                        @Html.TextBoxFor(x => x.Title, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Title)
                    </div>
                    <div class="form-group">
                        <label for="name">Popis:</label>
                        @Html.TextAreaFor(x => x.Description, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Description)
                    </div>
                    @Html.HiddenFor(x => x.Id)
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Upravit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}