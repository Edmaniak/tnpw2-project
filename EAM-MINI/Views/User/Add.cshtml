@using DataAccess.Model
@{
    ViewBag.Title = "Přidat uživatele";
}

<div class="row">
    <div class="col-6">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Zadejte údaje</h6>
            </div>
            <div class="card-body">
                @using(Html.BeginForm()) {
                    <div class="form-group">
                        <label for="name">Jméno:</label>
                        <input placeholder="Jméno" type="text" name="name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="name">Příjmení:</label>
                        <input placeholder="Příjmení" type="text" name="name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="E-mail">E-mail:</label>
                        <input placeholder="E-mail" type="email" name="name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="E-mail">Heslo:</label>
                        <input placeholder="Heslo" type="password" name="name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="E-mail">Role:</label>
                        <select class="form-control">
                            @foreach (Role role in ViewBag.roles)
                            {
                                <option value="@role.Id">@role.Title</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Vytvořit</button>
                    </div>
                   
                    
                  
                }
            </div>
        </div>
    </div>
</div>