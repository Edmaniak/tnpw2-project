@using DataAccess.Model
@model Equipment
@{
    ViewBag.Title = Model.Title;
}
@using (Html.BeginForm("Create", "EquipmentCategory", FormMethod.Post))
{
    <div class="row">
        <div class="col-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Údaje</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="name">Titulek:</label>
                        @Html.TextBoxFor(x => x.Title, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Title)
                    </div>
                    <div class="form-group">
                        <label for="name">Popis:</label>
                        @Html.TextAreaFor(x => x.Description, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Description)
                    </div>
                    <div class="form-group">
                        <label for="name">Kód:</label>
                        @Html.TextBoxFor(x => x.Code, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Code)
                    </div>
                    <div class="form-group">
                        <label for="email">Pořízeno dne:</label>
                        @Html.TextBoxFor(x => x.Purchased, "{0:dd. MM. yyyy}", new {@class = "form-control", @type = "date"})
                        @Html.ValidationMessageFor(x => x.Purchased)
                    </div>
                    <div class="form-group">
                        <label for="email">Záruka končí:</label>
                        @Html.TextBoxFor(x => x.Warranty, "{0:dd. MM. yyyy}", new {@class = "form-control", @type = "date"})
                        @Html.ValidationMessageFor(x => x.Warranty)
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Vytvořit</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Umístění</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="name">Prostředí:</label>
                        @Html.DropDownList("environmentId", new SelectList(ViewBag.environments, "Id", "Name", Model.Room.Environment.Id), new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="name">Místnost:</label>
                        @Html.DropDownList("roomId", new SelectList(Model.Room.Environment.Rooms, "Id", "Name", Model.Room.Id), new {@class = "form-control"})
                    </div>
                    <hr/>
                    <div class="form-group">
                        <label for="name">Hledat:</label>
                        <input type="text" id="searchRoom" class="form-control"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $('#environmentId').click(function() {
            
        })
    </script>
}